<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/item_parent_linear_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

 <LinearLayout
     android:id="@+id/item_child_linear_layout"
     android:layout_width="match_parent"
     android:layout_height="?android:attr/listPreferredItemHeight"
     android:orientation="horizontal"
     android:background="@drawable/blue_ripple"
     android:paddingEnd="16dp"
     android:paddingLeft="16dp"
     android:paddingRight="16dp"
     android:paddingStart="16dp">


  <android.support.v7.widget.AppCompatTextView
      android:id="@+id/priority_tv"
      android:layout_width="36dp"
      android:layout_height="36dp"
      android:layout_gravity="center_vertical"
      android:background="@drawable/priority_circle"
      android:fontFamily="sans-serif-medium"
      android:gravity="center"
      android:textColor="@android:color/white"
      android:textSize="16sp"
      tools:text="H"/>


  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      android:layout_weight="1"
      android:orientation="horizontal">


   <android.support.v7.widget.AppCompatTextView
       android:id="@+id/item_title_tv"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:ellipsize="end"
       android:maxLines="2"
       android:textColor="@color/textColorToDoItemTitle"
       android:textSize="16sp"
       style="@style/TextAppearance.AppCompat.Medium"
       tools:text="Long placeholder location that should wrap to more than 2 lines of text" />

  </LinearLayout>


  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      android:orientation="vertical">

   <android.support.v7.widget.AppCompatTextView
       android:id="@+id/date_tv"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="end"
       android:textColor="@color/textColorToDoItemDetails"
       android:textSize="12sp"
       tools:text="Mar 6, 2010"/>

   <android.support.v7.widget.AppCompatTextView
       android:id="@+id/time_tv"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="end"
       android:textColor="@color/textColorToDoItemDetails"
       android:textSize="12sp"
       tools:text="3:00 PM"/>

  </LinearLayout>

 </LinearLayout>

 <ImageView
     android:layout_width="match_parent"
     android:layout_height="1dp"
     android:id="@+id/divider"
     android:alpha="0.4"
     android:background="@color/colorDivider"/>
</LinearLayout>



